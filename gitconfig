[user]
    name = Jonathan Camile
    email = jonathan@meilleursagents.com
[color]
    ui = auto
[diff]
    renamelimit = 0
[push]
    default = tracking
[merge]
    tool = vimdiff
[core]
	editor = vi
[rerere]
	enabled = 1
[alias]
    purr = pull --rebase
    st = status -sb
    ready = rebase -i @{u}
    wync = "!git stash && git purr && git stash pop && git push"
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
