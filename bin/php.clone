#!/bin/bash

if [ -n $1 && -n $2 ]; then
	echo "Usage: $0 filename new-name"
	exit 1
fi;

FILE=`basename $1 | cut -d.`
FILE=${FILE%\.*}

NEW=`basename $2 | cut -d.`
NEW=${NEW%\.*}

if [ -e  "$FILE.php" && ! -e "$NEW.php" ]; then
	cp "$FILE.php" "$NEW.php"
fi;

if [ -e  "$FILE.inc" && ! -e "$NEW.inc" ]; then
	cp "$FILE.inc" "$NEW.inc"
fi;

if [ -e  "lang/fr/$FILE.php" && ! -e "lang/fr/$NEW.php" ]; then
	cp "lang/fr/$FILE.php" "lang/fr/$NEW.php"
fi;
