# MA Tools
export MA_FOLDER="${HOME}/projects"
source ${MA_FOLDER}/MA-Infra/tools/gssh/gssh_aliases.sh

export NVM_DIR="/Users/tao/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && . "$NVM_DIR/nvm.sh"  # This loads nvm

## Postgres
export PATH=$PATH:/Applications/Postgres.app/Contents/Versions/latest/bin

## MA VirtualMachine
export MA_REPOSITORY=~/projects/meilleursagents
export MA_DEV_API_IP=35.205.113.23

# GO
export GOPATH=$HOME/go
export PATH=$PATH:$GOPATH/bin:/usr/local/go/bin

# Flutter
export FLUTTER_PATH=$HOME/.local/flutter
export PATH=$PATH:$FLUTTER_PATH/bin

source "/opt/google-cloud-sdk/path.zsh.inc"
source "/opt/google-cloud-sdk/completion.zsh.inc"

if command -v tmux &> /dev/null && [ -z "$TMUX" ]; then
    tmux attach -t default || tmux new -s default
fi

alias pbcopy='xclip'
alias pbpaste='xclip -o'

SSH_ENV="$HOME/.ssh/environment"

function start_agent {
    echo "Initialising new SSH agent..."
    /usr/bin/ssh-agent | sed 's/^echo/#echo/' > "${SSH_ENV}"
    echo succeeded
    chmod 600 "${SSH_ENV}"
    . "${SSH_ENV}" > /dev/null
    gopass show -c Home/SSHPassphrase
    /usr/bin/ssh-add;
}

# Source SSH settings, if applicable
if [ -f "${SSH_ENV}" ]; then
    . "${SSH_ENV}" > /dev/null
    #ps ${SSH_AGENT_PID} doesn't work under cywgin
    ps -ef | grep ${SSH_AGENT_PID} | grep ssh-agent$ > /dev/null || {
        start_agent;
    }
else
    start_agent;
fi

export ANSIBLE_VAULT_PASSWORD_FILE="${HOME}/.vault_pass.txt"
export ANSIBLE_VAULT_IDENTITY_LIST="${HOME}/.dev_vault_pass.txt"
export GEGEN_DIR="${HOME}/projects/MA-Infra/gegen"
export GEGEN_ANSIBLE_DIR="${HOME}/projects/MA-Infra/ansible"
export KUBE_EDITOR="vi"
export USE_GKE_GCLOUD_AUTH_PLUGIN=True

eval "$(rbenv init -)"
