## OpenSSL
export PATH="/usr/local/opt/openssl/bin:${PATH}"

## Cargo
export PATH="${HOME}/.cargo/bin:${PATH}"

## pyenv
export PYENV_ROOT="${HOME}/.pyenv"
[[ -d $PYENV_ROOT/bin ]] && export PATH="${PYENV_ROOT}/bin:${PATH}"
eval "$(pyenv init -)"

alias pbcopy='xclip'
alias pbpaste='xclip -o'
alias vi='nvim'

SSH_ENV="${HOME}/.ssh/environment"

export VAULT_ADDR=https://vault.arcanite.ch:8282/
export DOCKER_HOST=unix://$XDG_RUNTIME_DIR/docker.sock
export POETRY_HTTP_BASIC_USERNAME=dependencies
export POETRY_HTTP_BASIC_PASSWORD=$(vault kv get -format=json -mount="secrets-arcanite" "Outils/Dev/pip.arcanite.ch/dependencies" | jq -r .data.data.password)

export EDITOR=nvim
export KUBE_EDITOR=$EDITOR

function start_agent {
    echo "Initialising new SSH agent..."
    /usr/bin/ssh-agent | sed 's/^echo/#echo/' > "${SSH_ENV}"
    echo succeeded
    chmod 600 "${SSH_ENV}"
    . "${SSH_ENV}" > /dev/null
    /usr/bin/ssh-add;
}

# Source SSH settings, if applicable
if [ -f "${SSH_ENV}" ]; then
    . "${SSH_ENV}" > /dev/null
    #ps ${SSH_AGENT_PID} doesn't work under cywgin
    ps -ef | grep ${SSH_AGENT_PID} | grep ssh-agent$ > /dev/null || {
        start_agent;
    }
else
    start_agent;
fi
